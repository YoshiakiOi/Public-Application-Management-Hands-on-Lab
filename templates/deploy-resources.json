{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "vnet-1",
            "metadata": {
                "description": "仮想ネットワークの名前"
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "10.1.0.0/16",
            "metadata": {
                "description": "IPv4 アドレス空間"
            }
        },
        "subnetName1":{
            "type": "string",
            "defaultValue": "Subnet-1",
            "metadata": {
                "description": "サブネットの名前 (1)"
            }
        },
        "subnetPrefix1": {
            "type": "string",
            "defaultValue": "10.1.1.0/24",
            "metadata": {
                "description": "サブネット アドレス範囲 (1)"
            }
        },
        "subnetName2":{
            "type": "string",
            "defaultValue": "Subnet-2",
            "metadata": {
                "description": "サブネットの名前 (2)"
            }
        },
        "subnetPrefix2": {
            "type": "string",
            "defaultValue": "10.1.2.0/24",
            "metadata": {
                "description": "サブネット アドレス範囲 (2)"
            }
        },
        "webAppName": {
            "type": "string",
            "metadata": {
                "description": "Web アプリの名前"
            }
        },
        "cosmosAccountName": {
            "type": "string",
            "metadata": {
                "description": "Cosmos DB アカウントの名前"
            }
        },
        "logAnalyticsWorkspace": {
            "type": "string",
            "defaultValue": "log1",
            "metadata": {
                "description": "Log Analytics ワークスペース名"
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[resourceGroup().location]",
        "planName": "[concat('plan-', parameters('webAppName'))]"
    },
    "resources": [
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName1')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix1')]"
                        }
                    },
                    {
                        "name": "[parameters('subnetName2')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix2')]"
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.1.10.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('planName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "location": "[variables('location')]",
            "kind": "",
            "sku": {
                "name": "P1V3",
                "tier": "PremiumV3"
            },
            "properties": {
                "name": "[variables('planName')]",
                "workerSize": "3",
                "workerSizeId": "3",
                "numberOfWorkers": 1,
                "zoneRedundant": false
            }
        },
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]"
            ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "CosmosDbEndpoint",
                            "value": ""
                        },
                        {
                            "name": "AuthorizationKey",
                            "value": ""
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "dotnet"
                        }
                    ],
                    "minTlsVersion": "1.2",
                    "netFrameworkVersion": "v6.0"
                }
            }
        },
        {
            "name": "[parameters('cosmosAccountName')]",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2021-05-15",
            "location": "[variables('location')]",
            "tags": {},
            "kind": "GlobalDocumentDB",
            "properties": {
                "locations": [
                    {
                        "locationName": "[variables('location')]",
                        "failoverPriority": 0
                    }
                ],
                "databaseAccountOfferType": "Standard",
                "capabilities": []
            }
        },
     {
         "name": "[parameters('logAnalyticsWorkspace')]",
         "type": "Microsoft.OperationalInsights/workspaces",
         "apiVersion": "2020-10-01",
         "location": "[variables('location')]",
         "properties": {
             "sku": {
                 "name": "PerGB2018"
             },
             "retentionInDays": 30,
             "features": {
                 "searchVersion": 1
             }
         }
     }
    ],
    "outputs": {}
}